{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "typeRoots": ["./src/types", "node_modules/@types"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "checkJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/types/express/*.d.ts"]
}
